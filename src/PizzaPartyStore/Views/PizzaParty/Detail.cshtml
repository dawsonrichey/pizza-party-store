@model PizzaPartyStore.Models.PizzaParty

@{
	ViewBag.Title = Model.DisplayText;
	ViewBag.ShowBackBar = true;
}

<h2>@Model.DisplayText</h2>

<div class="row">
	<div class="col-md-6">
		<div class="well">
			<h5><label>Specialty Pizza:</label> @Model.PizzaName</h5>
			<h5><label>Cost of Pizza: $</label> @Model.PizzaCost</h5>
			<h5><label>Favorite:</label> @(Model.Favorite ? "Yes" : "No")</h5>
			@if (Model.Toppings.Length > 0)
			{
			<h5>Toppings:</h5>
			<div>
				<ul>
					@foreach (var topping in Model.Toppings)
					{
					<li>@topping.Role: @topping.Name</li>
					}
				</ul>
			</div>
			}
		</div>
		<h5>Description:</h5>
		<div>@Html.Raw(Model.DescriptionHtml)</div>
	</div>
	<div class="col-md-6">
		<img src="/Images/@Model.CoverImageFileName"
			 alt="@Model.DisplayText" class="img-responsive" />
	</div>
</div>



